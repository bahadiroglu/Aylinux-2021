dosya   = gdk-pixbuf.loaders

[sha512]
#1 = e50badaad2ccb3c816ba0849be386ecb75ea3c7df203d0b0144541c463ad1ace86c0d190b7550e3f59f0cba9639acc5cc048b7127484287894e4df6d62777920

[derle]
